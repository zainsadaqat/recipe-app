<h1>Public Recipes will come here</h1>
<% @public_recipess.each do |public_recipe| %>
  <div>
    <%= link_to recipe_path(public_recipe) do %>
      <p><%= public_recipe.name %></p>
      <p><%= public_recipe.description %></p>
      <p><%= public_recipe.preparation_time %></p>
    <% end %>
    <hr/>
  </div>
<% end %>
