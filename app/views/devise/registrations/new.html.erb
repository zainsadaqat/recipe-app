<div class="food-details-cont">
  <div class="food-info fomrs-contaier">
    <div class="creation-forms">
      <h2 class="subheadings">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum"  %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="main-forms-actions">
          <%= f.submit "Sign up", class: "sign-up-btns" %>
          <p>Do you alraedy have account?</p>
           <%= link_to "Log in", new_user_session_path, class: "creator-btns main-forms-logins" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
