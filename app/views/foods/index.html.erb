<div class="foods-main-container">
  <div class="foods-inner-content">
    <table>
      <caption>List of ingredients</caption>
      <thead>
      <tr>
        <th scope="col">Ingredient</th>
        <th scope="col">Measurement unit</th>
        <th scope="col">Unit price</th>
        <th scope="col" colspan="2">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @foods.includes(:user).each do |food| %>
          <%= render food, :food => food %>
      <% end %>
      </tbody>
    </table>
    <%= link_to "Add ingredient", new_food_path, class: "creator-btns"%>
  </div>
</div>